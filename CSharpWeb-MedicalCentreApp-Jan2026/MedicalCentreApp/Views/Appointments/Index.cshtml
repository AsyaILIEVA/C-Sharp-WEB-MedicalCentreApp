@model IEnumerable<MedicalCentreApp.ViewModels.Appointments.AppointmentListViewModel>

<h2>Appointments</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create Appointment</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Date.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@a.PatientName</td>
                <td>@a.DoctorName</td>
                <td>@a.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@a.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
