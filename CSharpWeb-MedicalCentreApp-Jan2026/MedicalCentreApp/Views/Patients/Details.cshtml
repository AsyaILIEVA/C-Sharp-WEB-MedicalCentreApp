@model MedicalCentreApp.ViewModels.Patients.PatientDetailsViewModel

@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container mt-4">
    
    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <div class="row align-items-center">

                <div class="col-md-8">
                    <h2 class="mb-1">@Model.FullName</h2>
                    <p class="text-muted mb-2">Patient Profile</p>

                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>EGN:</strong> @Model.EGN</p>
                            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd.MM.yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Address:</strong> @Model.Address</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-outline-primary mb-2 w-100">
                        Edit Patient
                    </a>

                    <a asp-controller="Appointments"
                       asp-action="CreateForPatient"
                       asp-route-patientId="@Model.Id"
                       class="btn btn-primary mb-2 w-100">
                        Book Appointment
                    </a>

                    <a asp-action="MedicalRecords"
                       asp-route-id="@Model.Id"
                       class="btn btn-outline-info w-100">
                        My Medical Records
                    </a>
                </div>

            </div>

        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Upcoming Appointments</h4>
            </div>

            @if (!Model.Appointments.Any())
            {
                <div class="alert alert-light border text-muted">
                    No upcoming appointments.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Doctor</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.Appointments)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">
                                        @a.Date.ToString("dd.MM.yyyy")
                                    </span>
                                    <br />
                                    <small class="text-muted">
                                        @a.Date.ToString("HH:mm")
                                    </small>
                                </td>
                                <td>@a.DoctorName</td>
                                <td>@a.Reason</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
   
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            Back to Patients
        </a>
    </div>

</div>
