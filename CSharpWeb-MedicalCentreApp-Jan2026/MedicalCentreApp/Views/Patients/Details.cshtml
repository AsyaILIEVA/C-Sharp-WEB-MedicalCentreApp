@model MedicalCentreApp.ViewModels.Patients.PatientDetailsViewModel

@{
    ViewData["Title"] = "Patient Details";
}

<h2>@Model.FullName</h2>

<ul class="list-group mb-4">
    <li class="list-group-item"><strong>EGN:</strong> @Model.EGN</li>
    <li class="list-group-item"><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</li>
    <li class="list-group-item"><strong>Phone:</strong> @Model.PhoneNumber</li>
    <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
    <li class="list-group-item"><strong>Address:</strong> @Model.Address</li>
</ul>

<div class="d-flex justify-content-between align-items-center mt-4 mb-2">
    <h4 class="mb-0">Appointments</h4>

    <a asp-controller="Appointments"
       asp-action="CreateForPatient"
       asp-route-patientId="@Model.Id"
       class="btn btn-primary">
        Create Appointment
    </a>
</div>

@if (!Model.Appointments.Any())
{
    <p>No appointments.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Doctor</th>
                <th>Reason</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Appointments)
            {
                <tr>
                    <td>@a.Date.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@a.DoctorName</td>
                    <td>@a.Reason</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
