@model MedicalCentreApp.ViewModels.Doctors.CreateDoctorInputModel

@{
    ViewData["Title"] = "Create Doctor";
}

<h2>Create Doctor</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
