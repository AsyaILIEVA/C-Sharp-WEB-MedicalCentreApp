@model MedicalCentreApp.ViewModels.Doctors.DoctorDetailsViewModel

@{
    ViewData["Title"] = "Doctor Details";

    
    var upcomingAppointments = Model.Appointments
        .Where(a => a.Date >= DateTime.Now)
        .OrderBy(a => a.Date)
        .ToList();

    
    DateTime? nextAvailable = null;

    if (!upcomingAppointments.Any())
    {
        nextAvailable = DateTime.Now;
    }
    else
    {        
        nextAvailable = upcomingAppointments.Last().Date.AddHours(1);
    }
}

<h2 class="mb-4">Doctor Details</h2>

<div class="row">
   
    <div class="col-md-4 text-center">
        <img src="@(Model.ImageUrl ?? "/images/doctor-placeholder.png")"
             class="img-fluid rounded mb-3 shadow-sm"
             alt="@Model.FullName" />

        @if (string.IsNullOrEmpty(Model.ImageUrl))
        {
            <p class="text-muted">No image uploaded</p>
        }
    </div>

    
    <div class="col-md-8">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h4 class="card-title">@Model.FullName</h4>
                <p class="card-text"><strong>Specialty:</strong> @Model.Specialty</p>
                <p class="card-text">
                    <strong>Next Available:</strong>
                    <span class="text-success">
                        @nextAvailable?.ToString("dd MMM yyyy, HH:mm")
                    </span>
                </p>
            </div>
        </div>

        
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Upcoming Appointments</h5>

                @if (!upcomingAppointments.Any())
                {
                    <p class="text-success">No upcoming appointments – doctor is fully available.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var appointment in upcomingAppointments)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @appointment.Date.ToString("dd MMM yyyy, HH:mm")
                                <span class="badge bg-primary rounded-pill">@appointment.AppointmentStatus</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

<hr />

<a asp-action="Index" class="btn btn-secondary mt-3">
    Back to Doctors
</a>
